<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<NoWarn>$(NoWarn);1591</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\SlideGenerator.Domain\SlideGenerator.Domain.csproj" />
		<ProjectReference Include="..\SlideGenerator.Application\SlideGenerator.Application.csproj" />
		<ProjectReference Include="..\SlideGenerator.Framework\SlideGenerator.Framework.csproj" />
		<PackageReference Include="Downloader" Version="4.0.3" />
		<PackageReference Include="DocumentFormat.OpenXml" Version="3.3.0" />
		<PackageReference Include="YamlDotNet" Version="16.3.0" />
		<PackageReference Include="Hangfire.Core" Version="1.8.22" />
		<PackageReference Include="Hangfire.AspNetCore" Version="1.8.22" />
		<PackageReference Include="Hangfire.Storage.SQLite" Version="0.4.2" />
	</ItemGroup>

	<ItemGroup Condition="'$(RuntimeIdentifier)'=='win-x64'">
		<PackageReference Include="Emgu.CV.runtime.mini.windows" Version="4.12.0.5764" />
	</ItemGroup>
	<ItemGroup Condition="'$(RuntimeIdentifier)'=='linux-x64'">
		<PackageReference Include="Emgu.CV.runtime.mini.ubuntu-x64" Version="4.12.0.5764" />
	</ItemGroup>
	<ItemGroup Condition="'$(RuntimeIdentifier)'=='linux-arm'">
		<PackageReference Include="Emgu.CV.runtime.mini.debian-arm" Version="4.12.0.5764" />
	</ItemGroup>
	<ItemGroup Condition="'$(RuntimeIdentifier)'=='linux-arm64'">
		<PackageReference Include="Emgu.CV.runtime.mini.debian-arm64" Version="4.12.0.5764" />
	</ItemGroup>
	<ItemGroup Condition="'$(RuntimeIdentifier)'=='osx-x64' Or '$(RuntimeIdentifier)'=='osx-arm64'">
		<PackageReference Include="Emgu.CV.runtime.mini.macos" Version="4.12.0.5764" />
	</ItemGroup>

</Project>
