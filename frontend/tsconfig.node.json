{
	"compilerOptions": {
		"composite": true,
		"emitDeclarationOnly": true,
		"declarationDir": "dist-types",
		"outDir": "dist-types",
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["vite.config.ts", "electron", "src/shared/locales/**/*.ts"]
}
