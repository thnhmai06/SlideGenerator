  "keywords": [
    "electron",
    "react",
    "typescript",
    "vite"
  ],
  "author": "thnhmai06",
  "dependencies": {
    "@microsoft/signalr": "^8.0.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
