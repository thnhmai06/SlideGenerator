{
  "name": "slide-generator",
  "version": "1.0.0",
  "description": "Frontend client of SlideGenerator application.",
  "main": "dist-electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
